[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow unused imports in test files 
    tests/*.py:F401
    pipelines/*/tests/*.py:F401 